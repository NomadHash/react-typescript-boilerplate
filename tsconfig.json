{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "noResolve": false,
    "noImplicitAny": false,
    "removeComments": false,
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"]
    }
  },
  "typeRoots": ["src/types", "node_modules/@types", "src/@type"],
  "exclude": ["node_modules", "build", "./node_modules/**/*"],
  "include": ["./src/**/*", "@type"]
}
